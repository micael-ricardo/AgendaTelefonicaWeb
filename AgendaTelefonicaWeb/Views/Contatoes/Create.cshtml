@model AgendaTelefonicaWeb.Models.Contato

@{
    ViewData["Title"] = "Cadastrar Contato";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<h4>Contato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefones" class="control-label"></label>
                <input asp-for="Telefones" class="form-control" />
                <span asp-validation-for="Telefones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastro" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary"> Voltar </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
